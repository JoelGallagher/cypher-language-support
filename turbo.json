{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["out/**", "dist/**", "esm/**"],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "watch": {},
    "test": {
      "cache": false,
      "persistent": true
    },
    "@neo4j-cypher/react-codemirror#test:e2e": {
      "cache": false,
      "persistent": false
    },
    "cypher-ls-vscode-playground#test:e2e": {
      "cache": false,
      "persistent": false,
      "dependsOn": ["@neo4j-cypher/react-codemirror#test:e2e"]
    },
    "@neo4j-cypher/react-codemirror#build": {
      "dependsOn": ["language-support#build"]
    },
    "react-codemirror-playground#dev": {
      "dependsOn": ["language-support#build"]
    },
    "cypher-language-server#build": {
      "dependsOn": ["language-support#build", "schema-poller#build"]
    }
  }
}
