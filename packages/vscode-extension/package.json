{
  "name": "neo4j-for-vscode",
  "private": true,
  "displayName": "Neo4j for VS Code",
  "description": "Highlighting, completions and more for Neo4j Cypher in VS Code",
  "publisher": "neo4j-extensions",
  "author": "Neo4j Inc.",
  "license": "Apache-2.0",
  "version": "1.1.1",
  "preview": true,
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "cypher",
    "neo4j",
    "graph",
    "database",
    "completions"
  ],
  "icon": "images/logo.png",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/neo4j/cypher-language-support.git"
  },
  "bugs": {
    "url": "https://github.com/neo4j/cypher-language-support/issues"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.18.2",
    "vscode": "^1.75.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "neo4j.manageConnection",
        "category": "Neo4j",
        "title": "Manage Connection",
        "icon": "$(add)"
      },
      {
        "command": "neo4j.deleteConnection",
        "title": "Delete Connection..."
      },
      {
        "command": "neo4j.connect",
        "title": "Connect"
      },
      {
        "command": "neo4j.disconnect",
        "title": "Disconnect"
      },
      {
        "command": "neo4j.refreshConnections",
        "title": "Refresh Connections"
      },
      {
        "command": "neo4j.saveConnection",
        "title": "Create Connection..."
      }
    ],
    "viewsWelcome": [
      {
        "view": "neo4jConnections",
        "contents": "No connections.\n[Add New Connection](command:neo4j.manageConnection)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "neo4j.deleteConnection",
          "when": "false"
        },
        {
          "command": "neo4j.connect",
          "when": "false"
        },
        {
          "command": "neo4j.disconnect",
          "when": "false"
        },
        {
          "command": "neo4j.refreshConnections",
          "when": "false"
        },
        {
          "command": "neo4j.saveConnection",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "neo4j.manageConnection",
          "when": "view == neo4jConnections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "neo4j.manageConnection",
          "when": "view == neo4jConnections && viewItem == connection || viewItem == activeConnection"
        },
        {
          "command": "neo4j.deleteConnection",
          "when": "view == neo4jConnections && viewItem == connection || viewItem == activeConnection"
        },
        {
          "command": "neo4j.connect",
          "when": "view == neo4jConnections && viewItem == connection"
        },
        {
          "command": "neo4j.disconnect",
          "when": "view == neo4jConnections && viewItem == activeConnection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neo4j-connection-explorer",
          "title": "Neo4j",
          "icon": "resources/images/neo4j.svg"
        }
      ]
    },
    "views": {
      "neo4j-connection-explorer": [
        {
          "type": "tree",
          "id": "neo4jConnections",
          "name": "Connections",
          "icon": "resources/images/neo4j.svg"
        }
      ]
    },
    "languages": [
      {
        "id": "cypher",
        "extensions": [
          ".cypher"
        ],
        "aliases": [
          "Cypher"
        ],
        "configuration": "./cypher-language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Neo4j for VS Code",
      "properties": {
        "neo4j.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "neo4j.connect": {
          "order": 1,
          "type": "boolean",
          "default": true,
          "description": "Whether to connect to Neo4j for database aware completions.",
          "deprecationMessage": "You can now use the connection panel to connect/disconnect from a database."
        },
        "neo4j.connectURL": {
          "order": 2,
          "type": "string",
          "default": "neo4j://localhost:7687",
          "description": "URL of the Neo4j instance to poll data from, `bolt` & `neo4j` protocols supported.",
          "deprecationMessage": "You can now use the connection panel to manage connections."
        },
        "neo4j.user": {
          "order": 3,
          "type": "string",
          "default": "neo4j",
          "description": "Username for the database connection.",
          "deprecationMessage": "You can now use the connection panel to manage connections."
        },
        "neo4j.password": {
          "order": 4,
          "type": "string",
          "default": "password",
          "description": "Password for the database connection.",
          "deprecationMessage": "You can now use the connection panel to manage connections."
        }
      }
    },
    "configurationDefaults": {
      "[cypher]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "bundle-language-server": "cd ../language-server && npm run bundle && cp dist/cypher-language-server.js ../vscode-extension/dist/ && npm run bundle-worker && cp dist/lintWorker.js ../vscode-extension/dist/",
    "bundle-extension": "esbuild ./src/extension.ts --bundle --external:vscode --format=cjs --platform=node --minify --outfile=dist/extension.js",
    "build": "tsc -b && npm run bundle-extension && npm run bundle-language-server",
    "clean": "rm -rf dist",
    "test:e2e": "npm run build && rm -rf .vscode-test/user-data && node ./dist/e2e_tests/main.js"
  },
  "dependencies": {
    "@neo4j-cypher/language-server": "2.0.0-next.7",
    "@neo4j-cypher/schema-poller": "2.0.0-next.6",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@testcontainers/neo4j": "^10.4.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.11.7",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.24.0",
    "dotenv": "^16.4.5",
    "mocha": "^10.2.0",
    "ovsx": "^0.9.1",
    "sinon": "^18.0.0",
    "typescript": "^4.9.5"
  }
}
