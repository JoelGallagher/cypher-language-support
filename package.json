{
  "name": "cypher-language-support",
  "description": "Cypher LSP",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo4j/cypher-language-support.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "watch": "turbo run watch",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "assemble": "turbo run assemble",
    "dev:codemirror": "turbo run codemirror-playground#dev",
    "dev:vscode": "turbo run vscode#dev",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts",
    "format": "prettier --config .prettierrc.json '**/*.ts' --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.15",
    "typescript": "^4.8.4"
  }
}
